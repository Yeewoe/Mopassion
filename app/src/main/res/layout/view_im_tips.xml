<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:background="@drawable/tips_bg">

        <TextView
            android:id="@+id/txt_tips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="22dp"
            android:textColor="#000000"
            android:textSize="17dp" />

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tips_title"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp">

            <ImageView
                android:id="@+id/img_default"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@drawable/im_img_ico" />

            <ImageView
                android:id="@+id/img_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_tips_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_container"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="17dp"
            android:lineSpacingMultiplier="1.4"
            android:textColor="#666666"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/txt_tips_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="17dp"
            android:background="#e9e9e9" />

        <TextView
            android:id="@+id/txt_scan_detail"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/img_line"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:drawableRight="@drawable/contents_arrow"
            android:gravity="center_vertical"
            android:text="@string/scan_all"
            android:textColor="#999999"
            android:textSize="13dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/relative_tips_container"
        android:layout_alignTop="@+id/relative_tips_container"></FrameLayout>

</RelativeLayout>