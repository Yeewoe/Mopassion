            <LinearLayout
                style="@style/FormItemContainer">

                <TextView
                    style="@style/FormItemTextLeft"
                    android:text="@string/trend_publish_post_title"/>

                <org.yeewoe.mopassion.app.common.view.widget.ChatEditText
                    android:id="@+id/edit_trend_title"
                    style="@style/FormItemEditRight"/>
            </LinearLayout>

            <View
                style="@style/ItemSpan"/>

            <LinearLayout
                style="@style/FormItemContainer.Top">

                <TextView
