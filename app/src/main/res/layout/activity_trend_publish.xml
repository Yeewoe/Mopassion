                <org.yeewoe.mopassion.app.common.view.widget.ChatEditText
                    android:id="@+id/edit_trend_content"
                    style="@style/FormItemEditRight.MultiLine"
                    android:maxLines="10"
                    android:minLines="3"/>
            </LinearLayout>

            <View style="@style/ItemSpan"/>

            <LinearLayout
                style="@style/FormItemContainer"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/trend_publish_photo_label"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/txt_size_14"/>

                <ImageView
                    android:id="@+id/imgvi_add_photo"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_trend_add_photo"/>
            </LinearLayout>

            <org.yeewoe.mopassion.app.common.view.widget.ThumbPhotoGridLayout
                android:id="@+id/thumbGL_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/common_padding_left_right_11dp"
                android:layout_marginLeft="@dimen/form_item_padding"
                android:layout_marginRight="@dimen/form_item_padding"
                android:layout_weight="1">

            </org.yeewoe.mopassion.app.common.view.widget.ThumbPhotoGridLayout>

            <View style="@style/ItemSpan"/>

            <Button
                android:id="@+id/btn_next"
                style="@style/Button.Purple"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:text="@string/next"/>
        </LinearLayout>

