<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:background="@drawable/tips_bg">

        <!--<TextView-->
            <!--android:id="@+id/txt_tips_title"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="17dp"-->
            <!--android:layout_marginLeft="11dp"-->
            <!--android:layout_marginRight="11dp"-->
            <!--android:layout_marginTop="22dp"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="17dp" />-->

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp">
            <!--android:layout_below="@+id/txt_tips_title"-->
            <ImageView
                android:id="@+id/img_default"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@drawable/im_img_ico" />

            <ImageView
                android:id="@+id/img_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/linear_items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_container"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/relative_tips_container"
        android:layout_alignTop="@+id/relative_tips_container"></FrameLayout>

</RelativeLayout>