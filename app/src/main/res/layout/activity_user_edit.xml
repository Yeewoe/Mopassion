                <LinearLayout
                    android:id="@+id/ll_birthday_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="39dp"
                    android:layout_marginLeft="@dimen/common_padding_left_right"
                    android:layout_marginRight="@dimen/common_padding_left_right"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
