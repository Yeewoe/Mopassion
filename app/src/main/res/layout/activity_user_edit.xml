                <org.yeewoe.mopassion.app.common.view.widget.HeadPhotoGridLayout
                    android:id="@+id/head_photo_gl_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:minHeight="94dp"
                    android:paddingBottom="22dp"
                    android:paddingLeft="@dimen/common_padding_left_right"
                    android:paddingRight="@dimen/common_padding_left_right"
                    android:paddingTop="22dp"
                    app:canAdd="true"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_top_bottom">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/common_padding_left_right"
                        android:paddingRight="@dimen/common_padding_left_right"
                        android:singleLine="false"
                        android:textColor="@color/txt_14"
                        android:textSize="@dimen/txt_size_14"
                        android:textStyle="bold"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_top_bottom">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:maxLength="@integer/max_length_signature"
                        android:maxLines="3"
                        android:paddingLeft="@dimen/common_padding_left_right"
                        android:paddingRight="@dimen/common_padding_left_right"
                        android:singleLine="false"
                        android:textColor="@color/txt_3e"
                        android:textSize="@dimen/txt_size_13"/>
                </android.support.design.widget.TextInputLayout>

