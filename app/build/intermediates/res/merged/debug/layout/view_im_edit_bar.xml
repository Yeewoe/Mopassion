<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@drawable/im_chat_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/edit_bar_notepad"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:padding="6dp"
        android:src="@drawable/ic_im_notepad" />

    <ImageView
        android:id="@+id/edit_bar_send_mail"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:padding="6dp"
        android:src="@drawable/ic_im_mail" />

    <ImageView
        android:id="@+id/edit_bar_delete"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:padding="6dp"
        android:src="@drawable/ic_im_delete" />

</LinearLayout>