<?xml version="1.0" encoding="utf-8"?>
<org.yeewoe.mopassion.app.common.view.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <org.yeewoe.mopassion.photo.fresco_lib.WallPhotoSimpleDraweeView
        android:id="@+id/imgvi_user_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/common_padding_left_right_3dp"
        android:background="#4D000000">

        <org.yeewoe.mopassion.app.common.view.widget.MopaTextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:text="10km"
            android:textSize="@dimen/txt_size_14"
            />

        <org.yeewoe.mopassion.app.common.view.widget.MopaGenderView
            android:id="@+id/genderview_main"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@drawable/female"/>
    </RelativeLayout>

</org.yeewoe.mopassion.app.common.view.widget.SquareLayout>