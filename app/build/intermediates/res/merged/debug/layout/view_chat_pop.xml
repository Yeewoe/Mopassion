<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_send_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_send_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/im_time_block_textview_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/im_time_block_margin_bottom"
        android:layout_marginTop="@dimen/im_time_block_margin_top"
        android:gravity="center"
        android:textColor="#888271"
        android:textSize="@dimen/im_time_block_textview_textsize" />

</LinearLayout>